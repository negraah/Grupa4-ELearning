    ViewData["Title"] = "Detalji recenzije";
}

<head>
    <style>
        h1 {
            text-align: left;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            color: #cf17ad;
            text-transform: uppercase;
        }
    </style>
</head>

<body>
    <br>
    <h1>Uredi ovu recenziju</h1>
    <br>
    <div>
