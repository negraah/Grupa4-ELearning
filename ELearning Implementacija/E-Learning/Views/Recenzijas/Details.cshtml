        <hr />
        <br>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ocjena)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ocjena)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Komentar)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Komentar)
            </dd>
